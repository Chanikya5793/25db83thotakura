extends layout

block content
  h1= title
  - let items = results
  div(class="container-fluid")
    div(class="row")
      each item, index in items
        div(class="col-sm-2" onclick=`buy(${index})`) 
          p Costume Type: #{item.costume_type}
          p Size: #{item.size}
          p Cost: $#{item.cost}
  
  script.
    function buy(index) {
      alert("You purchased item " + index);
    }
