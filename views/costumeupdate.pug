extends layout

block content
  h1 Costume Update
  if (!toShow)
    .alert No costume found for the given id. Please return to the list view and try again.
    .costume-actions
      a.btn.btn-secondary(href='/costumes') Back to costumes
  else
    - const costumeid = toShow._id
    - const costume_type = toShow.costume_type
    - const costumecost = toShow.cost
    - const costumesize = toShow.size
    - const costumecolor = toShow.color

    .form-shell
      .detail-row
        span.costumeAttr ID
        span #{costumeid}
      - const actionid = `/resource/costumes/${costumeid}`
      form#CostumeForm(action=actionid, method="PUT")
        .form-group
          label(for='costume_type') Costume type
          input#costume_type(type='text', name='costume_type', value=costume_type)
        .form-group
          label(for='size') Costume size
          input#size(type='text', name='size', value=costumesize)
        .form-group
          label(for='color') Costume color
          input#color(type='text', name='color', value=costumecolor)
        .form-group
          label(for='cost') Costume cost ($)
          input#cost(type='number', name='cost', value=costumecost, step='0.01')
        .costume-actions
          button.btn.btn-primary(type='submit') Update costume
          a.btn.btn-secondary(href='/costumes') Cancel
    script.
      document.forms['CostumeForm'].addEventListener('submit', (event) => {
        event.preventDefault();
        fetch(event.target.action, {
          method: 'PUT',
          body: new URLSearchParams(new FormData(event.target))
        }).then((resp) => {
          if(!resp.ok){
            throw new Error('Request failed with status ' + resp.status);
          }
          return resp.json();
        }).then((body) => {
          alert("Update succeeded");
          window.location.href = '/costumes/detail?id=' + event.target.action.split('/').pop();
        }).catch((error) => {
          alert("Update failed " + error);
        });
      });
